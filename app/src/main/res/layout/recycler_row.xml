<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xr">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="415dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="User:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/recyclerView_emailText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:fontFamily="@font/alfa_slab_one"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="6dp"

            android:text="TextView"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/recyclerView_ImageView"
            android:layout_width="225dp"
            android:layout_height="203dp"

            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Comment:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/recyclerView_commentText"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:fontFamily="@font/alfa_slab_one"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"

            android:paddingBottom="6dp"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15dp"
            android:background="#B3E875"
            android:text="MYSocialMedia"
            android:textAlignment="center"
            android:textColor="#6315EF"
            android:textSize="28dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>